{
  "name": "momal/momal",
  "description": "Montagsmalen (Pictionary) MVP - PHP WebSocket server (Ratchet) + Vanilla JS client",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "cboden/ratchet": "^0.4.4",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "Momal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Momal\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse",
    "cs:check": "php-cs-fixer fix --dry-run --diff --using-cache=no",
    "cs:fix": "php-cs-fixer fix",
    "check": [
      "@stan",
      "@cs:check",
      "@test"
    ]
  }
}
